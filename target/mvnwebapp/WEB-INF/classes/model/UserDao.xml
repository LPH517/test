			<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.UserDao">
	<insert id="add" parameterType="user">
	  	 insert into user values (null,#{loginId},#{loginPwd},#{name},#{emai},#{phone},#{address},#{birth});
	</insert>
	<select id="findAll"  resultType="user">
		select * from user
	</select>
	<update id="update" parameterType="user" >
		update user set id = #{id},loginId=#{loginId},loginPwd=#{loginPwd},name=#{name},email=#{email},phone=#{phone},address=#{address},birth=#{birth} where id = #{id}
	</update>
</mapper>			
